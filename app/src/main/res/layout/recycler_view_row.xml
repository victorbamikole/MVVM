<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recycler_layout"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="wrap_content">



    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:background="@color/brand6"
        android:backgroundTint="@color/white"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:textSize="8sp"
            android:backgroundTint="@color/brand13"
            android:text="Follow"
            android:layout_marginTop="9dp"
            android:layout_marginStart="300dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="50dp"
                android:background="@color/black"
                android:layout_width="50dp"
                android:layout_height="50dp">

                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:src="@drawable/img7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_marginStart="70dp"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:layout_marginTop="-50dp"
                android:textColor="@color/black"
                android:id="@+id/title"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginStart="70dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:id="@+id/post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>



            <!--        <TextView-->
            <!--            android:layout_gravity="center"-->
            <!--            android:layout_marginTop="8dp"-->
            <!--            android:textColor="@color/white"-->
            <!--            android:id="@+id/pokeName"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:textSize="18sp"-->
            <!--            android:textStyle="bold"/>-->

        </LinearLayout>
<!--        <ImageView-->
<!--            android:layout_marginBottom="10dp"-->
<!--            android:layout_marginTop="15dp"-->
<!--            android:layout_marginStart="79dp"-->
<!--            android:layout_gravity="bottom"-->
<!--            android:src="@drawable/ic_outline_favorite_border_24"-->
<!--            android:layout_width="20dp"-->
<!--            android:layout_height="20dp"/>-->

        <Button
            android:textColor="@color/brand13"
            android:backgroundTint="@color/white"
            android:id="@+id/newBtn"
            android:textSize="10sp"
            android:text="comment"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="79dp"
            android:layout_gravity="bottom"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="210dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_baseline_share_24" />

        <ImageView
            android:layout_marginBottom="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="330dp"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_outline_chat_bubble_outline_24"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>